pipeline {
    agent {
        node {
            label 'maven'
            
        }
    }
environment{
    PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
}
    stages {
        stage('Contineous-Build') {
            steps {
                sh 'mvn clean deploy'
            }
        }
    stage('SonarQube Analysis') {
    environment {
      scannerHome = tool 'siva1204-sonar-scanner'
    }
        steps {
            withSonarQubeEnv('siva1204-sonar-server') {
                // Run SonarScanner
                sh 'sonar-scanner'
                }
            }
        }
    }
}
}
