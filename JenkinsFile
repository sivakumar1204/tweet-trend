node {
  stage('SCM') {
    git 'https://github.com/sivakumar1204/tweet-trend.git'
  }
  stage('SonarQube analysis') {
    environment {
      scannerHome = tool 'demo-sonar-scanner'
    }
    steps {
    withSonarQubeEnv('demo-sonarqube-server') { // If you have configured more than one global server connection, you can specify its name
      sh "${scannerHome}/bin/sonar-scanner"
    }
    }
    }
}
