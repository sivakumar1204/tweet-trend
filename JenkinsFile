pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your Git repository
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/sivakumar1204/tweet-trend.git']]])
            }
        }
        
        stage('Build') {
            steps {
                // Compile and build your Java project
                sh 'mvn clean package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('siva1204-sonar-server') {
                    // Run SonarScanner
                    sh 'sonar-scanner'
                }
            }
        }
        stage('SonarQube Analysis') {
        environment {
            scannerHome = tool 'siva1204-sonar-scanner'
         }
        steps {
            withSonarQubeEnv('siva1204-sonar-server') {
                // Run SonarScanner
                sh 'sonar-scanner'
                }
            }
        }
    }
    }
    
}
