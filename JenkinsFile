pipeline {
    agent {
        node {
            label 'maven'
            
        }
    }
environment{
    PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
}
    stages {
        stage('Contineous-Build') {
            steps {
                sh 'mvn clean deploy'
            }
        }
    stage('SonarQube analysis') {
    environment {
      scannerHome = tool 'siva1204-sonar-scanner'
    }
    steps {
    withSonarQubeEnv('siva1204-sonarqube-server') { // If you have configured more than one global server connection, you can specify its name
      sh "${scannerHome}/bin/sonar-scanner"
    }
    }
    }
}
}
