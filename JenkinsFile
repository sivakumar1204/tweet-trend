pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/sivakumar1204/tweet-trend.git'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube Scanner'
                    
                    // Run SonarQube analysis
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
    }
}

