pipeline {
    agent {
        node {
            label 'maven'
            
        }
    }
environment {
    PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
}
    stages {
        stage('Contineous-Build') {
            steps {
                sh 'mvn clean deploy'
            }
        }
	stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube Scanner'
                    
                    // Run SonarQube analysis
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
    }
    }
}

