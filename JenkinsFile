pipeline {
    agent {
        node {
            label 'maven'
            
        }
    }
environment {
    PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
}
    stages {
        stage('Contineous-Build') {
            steps {
                sh 'mvn clean deploy'
            }
        }
	stage('Contineous Test') {
    environment {
        scannerHome = tool 'demo-sonarqube-scanner'
    }
        steps {
            withSonarQubeEnv('demo-sonarqube-server') {
                // Run SonarScanner
                sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=demo-key01_tweettrend \
                            -Dsonar.organization=demo \
                            -Dsonar.host.url=https://sonarcloud.io \
                            -Dsonar.login=d0bc273bbca75db0ac6ef69aa1cb0f28b9fe2ec7
                        """
                }
            }
        }
    }
}
